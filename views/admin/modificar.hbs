<div class="container" style="margin: 100px auto">

    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar una novedad</h4>
            <form action="/admin/novedades/modificar" method="post">
            <input type="hidden" value="{{novedades.id}}" name="id">
            <div class="form-grup">
                <label for="">Titulo</label>
                <input type="text" class="form-control" value="{{novedades.titulo}}" name="titulo">
            </div>
            <div class="form-grup">
                <label for="">Subtitulo</label>
                <textarea class="form-control" name="subtitulo">{{novedades.subtitulo}}</textarea>
            </div>
            <div class="form-grup">
                <label for="">Cuerpo</label>
                <textarea class="form-control" name="cuerpo">{{novedades.cuerpo}}</textarea>
            </div>
            <button type="submit" class="btn-btn-primary">Modificar</button>
            </form>
            {{#if error}}
                <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>